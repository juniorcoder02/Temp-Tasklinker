<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Freelancer Signup/Login</title>
    <link rel="stylesheet" href="/styles/signup-freelancer.css" />
    <link
    href="https://fonts.googleapis.com/css2?family=Karla:wght@400;700&family=Poppins:wght@600&display=swap"
    rel="stylesheet"
  />
  <link rel="icon" href="/assests/link.png" type="image/png">

  </head>
  <body>
    <div class="signup-container">
      <h2>Join TaskLinker as a Freelancer</h2>

      <!-- Signup Form -->
      <form action="/signup-freelancer" method="POST" id="signup-form">
        <div class="input-group full-width">
          <label for="first-name">Full name</label>
          <input type="text" id="fullName" name="fullName" required />
        </div>

        <div class="row">
          <div class="input-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="input-group">
            <label for="phone">Phone</label>
            <input type="tel" id="phone" name="phone" required />
          </div>
        </div>

        <div class="row">
          <div class="input-group">
            <label for="skills">Skills</label>
            <input
              type="text"
              id="skills"
              name="skills"
              placeholder="e.g. Python, JavaScript"
              required
            />
          </div>
        </div>

        <div class="row">
          <div class="input-group">
            <label for="experience">Experience (Years)</label>
            <input
              type="number"
              id="experience"
              name="experience"
              min="0"
              max="10"
              required
            />
          </div>
          <div class="input-group">
            <label for="availability">Availability</label>
            <input
              type="text"
              id="availability"
              name="availability"
              placeholder="e.g. Full-time, Part-time"
              required
            />
          </div>
        </div>

        <div class="input-group full-width">
          <label for="portfolio">Portfolio URL</label>
          <input
            type="url"
            id="portfolio"
            name="portfolio"
            placeholder="https://yourportfolio.com (optional)"
          />
        </div>

        <div class="input-group full-width">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" required />
        </div>

        <button type="submit" class="signup-btn">Sign Up</button>
        <h2>already have an account? <a href="/login-freelancer">Log in</a></h2>

      </form>

      <!-- Login Form -->
      <div class="login-section">
        <h2>Already have an account? Log In</h2>
        <form action="/login-freelancer" method="POST" id="login-form">
          <div class="input-group full-width">
            <label for="login-email">Email</label>
            <input type="email" id="login-email" name="email" required />
          </div>

          <div class="input-group full-width">
            <label for="login-password">Password</label>
            <input
              type="password"
              id="login-password"
              name="password"
              required
            />
          </div>

          <button type="submit" class="signup-btn">Log In</button>
        </form>
      </div>
    </div>
  </body>
</html>
